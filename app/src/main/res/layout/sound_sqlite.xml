<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".sound_sqlite">

    <Button
        android:id="@+id/btn_sound1"
        android:text="sound1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <!--s2212d01-->

    <Button
        android:id="@+id/btn_sound2"
        android:text="sound2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <!--s2212d02-->

    <Button
        android:id="@+id/btn_sound3"
        android:text="sound3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <!--s2212d03-->

    <Button
        android:id="@+id/btn_sound4"
        android:text="sound4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <!--s2301d01-->

    <Button
        android:id="@+id/btn_sound5"
        android:text="sound5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <!--s2301d02-->

    <Button
        android:id="@+id/btn_sound6"
        android:text="sound6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <!--s2301d03-->

    <Button
        android:id="@+id/btn_sound7"
        android:text="sound7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <!--s2301d04-->

    <EditText
        android:id="@+id/et_saveNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Write Sound Number" />

    <EditText
        android:id="@+id/et_saveName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Write Sound Name" />

    <Button
        android:id="@+id/btn_Insert"
        android:text="save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_Check"
        android:text="check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="8">

        <EditText
            android:id="@+id/edtNumResult"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/edtNameResult"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>